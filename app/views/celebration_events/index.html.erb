<div class="d-flex flex-column py-md-5 align-items-center">
  <div class="accordion mb-5" style="width: 640px;" id="futureAccordion">
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse" aria-expanded="false" aria-controls="collapseTwo">
          Future Celebration Events
        </button>
      </h2>
      <div id="collapse" class="accordion-collapse collapse" data-bs-parent="#futureAccordion">
        <%= render partial: "event_list", locals: {celebration_events: @future_celebration_events, flush: true} %>
      </div>
    </div>
  </div>
  
  <div style="width: 640px;">
    <%= render partial: "event_list", locals: {celebration_events: @celebration_events, flush: false} %>
  </div>
</div>
